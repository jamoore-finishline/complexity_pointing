<!-- app/views/shared/_pointing_session_form.html.erb -->
<%= form_with(model: pointing_session, url: admin_pointing_sessions_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :focus %>
    <%= form.select :focus, options_for_select(['Front End', 'Back End', 'Both']), { prompt: 'Select Focus' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Pointing Session', class: 'btn btn-primary' %>
  </div>
<% end %>
